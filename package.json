{
	"name": "react-native-skia-list",
	"version": "0.7.2",
	"description": "The fastest react-native list renderer based on skia",
	"source": "./src/index.ts",
	"module": "./lib/module/index.js",
	"react-native": "./src/index.ts",
	"types": "./lib/typescript/commonjs/src/index.d.ts",
	"files": [
		"src",
		"lib",
		"android",
		"ios",
		"cpp",
		"*.podspec",
		"!ios/build",
		"!android/build",
		"!android/gradle",
		"!android/gradlew",
		"!android/gradlew.bat",
		"!android/local.properties",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__",
		"!**/.*"
	],
	"scripts": {
		"example": "yarn workspace react-native-skia-list-example",
		"test": "jest",
		"typecheck": "tsc",
		"lint": "eslint \"**/*.{js,ts,tsx}\"",
		"clean": "del-cli lib",
		"prepare": "bob build",
		"release": "release-it",
		"start": "expo start",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"web": "./node_modules/.bin/webpack-dev-server --config ./webpack.config.ts",
		"web:build": "webpack --config ./webpack.config.ts",
		"pod": "cd ios && RCT_NEW_ARCH_ENABLED=1 pod install --repo-update"
	},
	"keywords": [
		"react-native",
		"ios",
		"android"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/samuelscheit/react-native-skia-list.git"
	},
	"author": "samuelscheit <github@samuelscheit.com> (https://github.com/SamuelScheit)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/samuelscheit/react-native-skia-list/issues"
	},
	"homepage": "https://samuelscheit.github.io/react-native-skia-list/",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"devDependencies": {
		"@babel/core": "^7.20.0",
		"@babel/plugin-syntax-jsx": "^7.25.9",
		"@babel/plugin-transform-react-jsx": "^7.25.9",
		"@commitlint/config-conventional": "^19.6.0",
		"@evilmartians/lefthook": "^1.9.0",
		"@expo/metro-runtime": "~3.2.3",
		"@expo/webpack-config": "~19.0.1",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
		"@react-native-menu/menu": "^1.1.3",
		"@react-native/eslint-config": "^0.76.4",
		"@release-it/conventional-changelog": "^9.0.3",
		"@shopify/flash-list": "^1.7.1",
		"@shopify/react-native-skia": "1.10.2",
		"@types/jest": "^29.5.14",
		"@types/react": "^19.0.1",
		"@types/react-dom": "^18",
		"@types/react-native": "^0.73.0",
		"@types/react-refresh": "^0",
		"commitlint": "^19.6.0",
		"del-cli": "^6.0.0",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"expo": "^52.0.37",
		"expo-build-properties": "^0.13.2",
		"expo-constants": "^17.0.7",
		"expo-haptics": "^14.0.1",
		"expo-image": "^2.0.6",
		"expo-linking": "^7.0.5",
		"expo-router": "^4.0.17",
		"expo-status-bar": "^2.0.1",
		"expo-system-ui": "^4.0.8",
		"file-loader": "^6.2.0",
		"jest": "^29.7.0",
		"linkify-it": "^5.0.0",
		"node-polyfill-webpack-plugin": "^4.0.0",
		"patch-package": "^8.0.0",
		"prettier": "^3.4.2",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-native": "^0.76.4",
		"react-native-builder-bob": "^0.37.0",
		"react-native-gesture-handler": "^2.24.0",
		"react-native-hyperlinks": "^1.0.4",
		"react-native-ios-context-menu": "^3.1.0",
		"react-native-ios-utilities": "^5.1.1",
		"react-native-keyboard-controller": "^1.16.6",
		"react-native-reanimated": "^3.17.1",
		"react-native-safe-area-context": "^4.11.0",
		"react-native-screens": "~4.4.0",
		"react-native-svg": "15.2.0",
		"react-native-url-polyfill": "^2.0.0",
		"react-native-web": "~0.19.10",
		"react-native-wgpu": "^0.1.13",
		"react-refresh": "^0.14.2",
		"release-it": "^17.10.0",
		"typescript": "^5.7.2",
		"url-loader": "^4.1.1",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.1.0",
		"zeego": "^2.0.1"
	},
	"workspaces": [
		"example",
		"docs"
	],
	"jest": {
		"preset": "react-native",
		"modulePathIgnorePatterns": [
			"<rootDir>/example/node_modules",
			"<rootDir>/lib/"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular"
			}
		}
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@react-native",
			"prettier"
		],
		"rules": {
			"no-unused-vars": "off",
			"no-unused-labels": "off",
			"no-unused-expressions": "off",
			"@typescript-eslint/no-unused-expressions": "off",
			"react/react-in-jsx-scope": "off",
			"@typescript-eslint/no-unused-vars": "off",
			"react-hooks/exhaustive-deps": "off",
			"react-native/no-inline-styles": "off",
			"react-hooks/rules-of-hooks": "off",
			"@typescript-eslint/no-shadow": "off",
			"prettier/prettier": [
				"error",
				{
					"quoteProps": "consistent",
					"singleQuote": false,
					"tabWidth": 4,
					"trailingComma": "es5",
					"useTabs": true,
					"printWidth": 120
				}
			]
		}
	},
	"eslintIgnore": [
		"node_modules/",
		"lib/"
	],
	"prettier": {
		"quoteProps": "consistent",
		"singleQuote": false,
		"tabWidth": 4,
		"trailingComma": "es5",
		"useTabs": true,
		"printWidth": 120
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "lib",
		"targets": [
			[
				"commonjs",
				{
					"esm": true
				}
			],
			[
				"module",
				{
					"esm": true
				}
			],
			[
				"typescript",
				{
					"project": "tsconfig.build.json",
					"esm": true
				}
			]
		]
	},
	"create-react-native-library": {
		"type": "library",
		"version": "0.41.2"
	},
	"packageManager": "yarn@4.5.1",
	"peerDependencies": {
		"@shopify/react-native-skia": "1.10.2",
		"react-native-gesture-handler": "^2.21.2",
		"react-native-keyboard-controller": "^1.14.5",
		"react-native-reanimated": "^3.16.3"
	}
}
